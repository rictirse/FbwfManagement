<Window x:Class="Fbwf.Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fbwf"
        mc:Ignorable="d"
        Title="FbwfControlPanel" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource DriverLetter}"/>
                <ComboBox />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource CacheSize}"/>
                <TextBox Text="100"/>
                <TextBlock Text="GB"/>
            </StackPanel>
        </StackPanel>
        <Button Content="Install" Height="24" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
